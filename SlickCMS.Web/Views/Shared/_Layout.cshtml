<!DOCTYPE html>
<!--[if lt IE 7]>      <html class="no-js lt-ie9 lt-ie8 lt-ie7"> <![endif]-->
<!--[if IE 7]>         <html class="no-js lt-ie9 lt-ie8"> <![endif]-->
<!--[if IE 8]>         <html class="no-js lt-ie9"> <![endif]-->
<!--[if gt IE 8]><!--> <html class="no-js"> <!--<![endif]-->
<head>
    <meta charset="utf-8">

    @*
        NOTE: send this as a header (or include this meta tag, or see web.config) to IE devices only
        http://www.validatethis.co.uk/news/fix-bad-value-x-ua-compatible-once-and-for-all/
    *@
    <!--<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">-->
    
    <title>@ViewData["MetaTitle"] | SlickCMS</title>
    <meta name="description" content="@ViewData["MetaDescription"]">
    <meta name="author" content="Matthew Juffs">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="icon" type="image/png" href="~/icons/favicon.ico" />
    <link rel="apple-touch-icon-precomposed" href="/icons/apple-touch-icon-precomposed.png">
    <link rel="apple-touch-icon-precomposed" sizes="57x57" href="~/icons/apple-touch-icon-57x57-precomposed.png">
    <link rel="apple-touch-icon-precomposed" sizes="72x72" href="~/icons/apple-touch-icon-72x72-precomposed.png">
    <link rel="apple-touch-icon-precomposed" sizes="114x114" href="~/icons/apple-touch-icon-114x114-precomposed.png">
    <link rel="apple-touch-icon-precomposed" sizes="144x144" href="~/icons/apple-touch-icon-144x144-precomposed.png">

    <!--
        Open Sans (Normal 400) for paragraphs
        Open Sans (Normal 400 Italic) for italic text within paragraphs
        Open Sans (Bold 700) for bold text within paragraphs and headings
        Open Sans (Bold 700 Italic) for italic boold text within paragraphs and headings

        http://www.google.com/fonts/#UsePlace:use/Collection:Open+Sans:400italic,700italic,400,700
    -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:400italic,700italic,400,700" rel="stylesheet" type="text/css">

    <environment include="Development">
        <link rel="stylesheet" href="~/css/0_normalize-v2.1.0.css" />
        <link rel="stylesheet" href="~/css/1_html5bp.css" />
        <link rel="stylesheet" href="~/css/2.1_bootstrap-grid-system.css" />
        <link rel="stylesheet" href="~/css/2.2_bootstrap-buttons.css" />
        <link rel="stylesheet" href="~/css/3_primary.css" />
        <link rel="stylesheet" href="~/css/4_helper.css" />
        <link rel="stylesheet" href="~/css/5_mediaqueries.css" />
        <link rel="stylesheet" href="~/css/6_print.css" />
        <link rel="stylesheet" href="~/css/7_browsers.css" />
        <link rel="stylesheet" href="~/css/8_jquery.lightbox-0.5.css" />

        <script src="~/js/libraries/modernizr-2.6.2.min.js"></script>
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="~/bundles/slickcms.min.css" asp-append-version="true" />
        <script src="~/bundles/modernizr.min.js" asp-append-version="true"></script>
    </environment>
</head>
<body>
    <div id="container">
        <div id="top"></div>

        <partial name="_Header" />

        @*
            NOTE: add the following class to an element to enable ckeditor inline editing:
            contenteditable="true"
        *@

        @*<partial name="_CookieConsentPartial" />*@

        @*The main element represents the main content of the body of a document or application. The main content area consists of content that is directly related to or expands upon the central topic of a document or central functionality of an application.*@
        <main role="main">

            <partial name="_OutdatedBrowser" />

            @RenderBody()

        </main>
    </div>

    <partial name="_Footer" />

    <partial name="Tracking/_GoogleAnalytics" />

    <environment include="Development">
        <script src="~/js/libraries/jquery-1.9.0.min.js"></script>

        <script src="~/js/plugins.js" asp-append-version="true"></script>
        <script src="~/js/libraries/responsiveslides.min.js"></script>
        <script src="~/js/libraries/jquery.lightbox-0.5.min.js"></script>
        <script src="~/js/script.js" asp-append-version="true"></script>
    </environment>
    <environment exclude="Development">
        @*<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.9.0/jquery.js"></script>
        <script>window.jQuery || document.write('<script src="js/libs/jquery-1.9.0.min.js"><\/script>')</script>*@

        <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-1.9.0.min.js"
                asp-fallback-src="~/js/libraries/jquery-1.9.0.min.js"
                asp-fallback-test="window.jQuery"
                crossorigin="anonymous"
                integrity="sha384-tsQFqpEReu7ZLhBV2VZlAu7zcOV+rXbYlF2cqB8txI/8aZajjp4Bqd+V6D5IgvKT">
        </script>

        <script src="~/bundles/slickcms.min.js" asp-append-version="true"></script>
        <script src="~/bundles/ckeditor.min.js" asp-append-version="true"></script>
    </environment>

    @RenderSection("scripts", required: false)

</body>
</html>
